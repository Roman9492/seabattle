<UserControl x:Class="sea_battle.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#2C3E50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="МОРСЬКИЙ БІЙ" FontSize="48" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,50" FontWeight="Bold"/>

            <TextBlock Text="Оберіть складність:" FontSize="20" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="BtnEasy" Content="Легко" Width="200" Height="40" Margin="5"/>
            <Button x:Name="BtnMedium" Content="Середньо" Width="200" Height="40" Margin="5"/>
            <Button x:Name="BtnHard" Content="Важко" Width="200" Height="40" Margin="5"/>
            <Button Content="Вихід" Width="200" Height="40" Background="#E74C3C" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>