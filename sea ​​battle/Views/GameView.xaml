<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="av" 
             x:Class="sea_battle.Views.GameView"
             xmlns:conv="clr-namespace:sea_battle.Converters"
             av:DesignHeight="400" av:DesignWidth="800">

    <UserControl.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <Grid Background="#2C3E50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Content="🎵 Музика" 
                Command="{Binding ToggleMusicCommand}" 
                Grid.ColumnSpan="2" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Center" 
                Margin="10" 
                Width="100" Height="30"
                Background="#34495E" 
                Foreground="White"
                BorderBrush="#F1C40F"
                BorderThickness="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ВАШЕ ПОЛЕ" Foreground="White" HorizontalAlignment="Center" Margin="5" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="{Binding PlayerShipsCount, StringFormat='Живих кораблів: {0}'}" Foreground="#F1C40F" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="14"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <UniformGrid Grid.Row="0" Grid.Column="1" Columns="10">
                    <TextBlock Text="А" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Б" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="В" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Г" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Д" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Е" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Є" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Ж" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="З" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="И" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </UniformGrid>

                <UniformGrid Grid.Row="1" Grid.Column="0" Rows="10">
                    <TextBlock Text="1" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="2" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="3" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="4" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="5" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="6" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="7" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="8" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="9" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="10" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                </UniformGrid>

                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding PlayerField.Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="10" Rows="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ShootCommand}" BorderBrush="DarkBlue" BorderThickness="0.5" Height="30" Width="30">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="AliceBlue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Ship">
                                                <Setter Property="Background" Value="Gray"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Miss">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="LightBlue" Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Hit">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" From="Yellow" To="Orange" Duration="0:0:0.4"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Destroyed">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ПОЛЕ ВОРОГА" Foreground="White" HorizontalAlignment="Center" Margin="5" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="{Binding EnemyShipsCount, StringFormat='Живих кораблів: {0}'}" Foreground="#F1C40F" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="14"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <UniformGrid Grid.Row="0" Grid.Column="1" Columns="10">
                    <TextBlock Text="А" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Б" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="В" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Г" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Д" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Е" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Є" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Ж" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="З" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="И" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </UniformGrid>

                <UniformGrid Grid.Row="1" Grid.Column="0" Rows="10">
                    <TextBlock Text="1" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="2" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="3" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="4" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="5" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="6" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="7" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="8" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="9" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="10" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                </UniformGrid>

                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding EnemyField.Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="10" Rows="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ShootCommand}" BorderBrush="DarkBlue" BorderThickness="0.5" Height="30" Width="30">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="AliceBlue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Miss">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="LightBlue" Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Hit">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" From="Yellow" To="Orange" Duration="0:0:0.4"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Destroyed">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>

        <Button Content="Назад в меню" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                Margin="20" Width="120" Height="35" x:Name="BtnBack" Background="#E74C3C" Foreground="White"/>
    </Grid>
</UserControl>